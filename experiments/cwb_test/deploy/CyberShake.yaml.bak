apiVersion: v1
kind: Service
metadata:
  name: task-container-builder
  labels:
    app: task-container-builder
spec:
  selector:
    app: builder
  ports:
    - port: 7070
      protocol: TCP
      targetPort: 7070
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: task-container-builder-deploy
  namespace: default
  labels:
    app: grpc
spec:
  replicas: 1
  selector:
    matchLabels:
      app: builder
  template:
    metadata:
      labels:
        app: builder
    spec:
      volumes:
        - name: log-volume
          hostPath:
            path: /home
        - name: config-volume
          hostPath:
            path: /etc/kubernetes
        - name: current-pem-volume
          hostPath:
            path: /etc/kubernetes/ssl
      #        - name: server-ca-volume
      #          hostPath:
      #            path: /etc/etcd/ssl
      containers:
        - name: task-container-builder-ctr
          #v8.2-baseline  v9.0-adaptive resource allocation scheme
          image: shanchenggang/task-container-builder:v9.0
          imagePullPolicy: IfNotPresent
          #imagePullPolicy: Always
          ports:
            - containerPort: 7070
              hostPort: 7070
          volumeMounts:
            - name: log-volume
              mountPath: /home
            - name: config-volume
              mountPath: /etc/kubernetes
            - name: current-pem-volume
              mountPath: /etc/kubernetes/ssl
          #            - name: server-ca-volume
          #              mountPath: /etc/etcd/ssl
          env:
            #            - name: ETCD_HOST
            #              valueFrom:
            #                configMapKeyRef:
            #                  name: cluster-info
            #                  key: etcd.host
            #            - name: ETCD_PORT
            #              valueFrom:
            #                configMapKeyRef:
            #                  name: cluster-info
            #                  key: etcd.port
            - name: MASTER_IP
              valueFrom:
                configMapKeyRef:
                  name: cluster-info
                  key: master.ip
            - name: GATHER_TIME
              valueFrom:
                configMapKeyRef:
                  name: cluster-info
                  key: gather.time
            - name: NODE_NUM
              valueFrom:
                configMapKeyRef:
                  name: cluster-info
                  key: node.num
            - name: REDIS_SERVER
              valueFrom:
                configMapKeyRef:
                  name: cluster-info
                  key: redis.server
            - name: REDIS_PORT
              valueFrom:
                configMapKeyRef:
                  name: cluster-info
                  key: redis.port
---
apiVersion: v1
kind: ConfigMap
metadata:
  labels:
    app: grpc
  name: cluster-info
  namespace: default
data:
  #Modify your cluster Master address via shell script
  master.ip: 0.0.0.0
  #the number of cluster node
  node.num: "6"
  #the time interval of gathering data
  gather.time: "500"
  redis.server: 0.0.0.0
  redis.port: "6379"
---
apiVersion: v1
kind: Service
metadata:
  name: workflow-injector
  labels:
    app: workflow-injector
spec:
  selector:
    app: injector
  ports:
    - port: 7070
      protocol: TCP
      targetPort: 7070
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: workflow-injector-deploy
  namespace: default
  labels:
    app: injector
spec:
  replicas: 1
  selector:
    matchLabels:
      app: injector
  template:
    metadata:
      labels:
        app: injector
    spec:
      containers:
        - name: workflow-injector-ctr
          #Constant v9.0, Linear v9.1, Pyramid v9.2
          image: shanchenggang/workflow-injector:v9.2
          imagePullPolicy: IfNotPresent
          #imagePullPolicy: Always
          command: [ "./workflowInjector" ]
          args: [ "34" ]
          ports:
            - containerPort: 7070
              hostPort: 7070
          env:
            - name: TASK_NUMBERS
              valueFrom:
                configMapKeyRef:
                  name: workflow-inject
                  key: task.numbers
            - name: REDIS_SERVER
              valueFrom:
                configMapKeyRef:
                  name: workflow-inject
                  key: redis.server
            - name: REDIS_PORT
              valueFrom:
                configMapKeyRef:
                  name: workflow-inject
                  key: redis.port
            - name: BATCH_NUM
              valueFrom:
                configMapKeyRef:
                  name: workflow-inject
                  key: batch.num
            - name: INTERVAL_TIME
              valueFrom:
                configMapKeyRef:
                  name: workflow-inject
                  key: interval.time
            - name: SLOPE_VALUE
              valueFrom:
                configMapKeyRef:
                  name: workflow-inject
                  key: slope.value
            - name: INITIAL_VALUE
              valueFrom:
                configMapKeyRef:
                  name: workflow-inject
                  key: initial.value
          volumeMounts:
            - name: dependency-volume
              mountPath: /config
      volumes:
        - name: dependency-volume
          configMap:
            name: dependency-inject
---
apiVersion: v1
kind: ConfigMap
metadata:
  labels:
    app: inject
  name: workflow-inject
  namespace: default
data:
  #task number in one workflow
  task.numbers: "22"
  redis.server: 0.0.0.0
  redis.port: "6379"
  #quantity per batch in Constant Arrival Pattern
  batch.num: "3"
  #time interval (seconds)
  interval.time: "300"
  #slope in Linear or Pyramid Pattern
  slope.value: "2"
  #initial value in Linear or Pyramid Pattern
  initial.value: "2"
---
